pipeline {
    def function_call =  load 'functions.groovy'

    agent any

    stages {
        stage('checkout') {
            steps {
                script {
                    function_call.checkout()
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    function_call.build()
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    def SERVER = "production"
                    function_call.deploy(SERVER)
                }
            }
        }
    }
}
