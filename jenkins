pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/alishbalaeeq/FlaskApp.git'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building'
                sh 'pip3 install -r requirements.txt'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Test'
                sh 'python3 test.py'
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    def data =  load 'example.groovy'
                    def SERVER = "PROD"
                    data.deploy(SERVER)
                }
            }
        }
    }
}
